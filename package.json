{
  "name": "linter-tidy",
  "main": "./lib/main",
  "version": "2.1.0",
  "description": "Linter plugin for HTML, using tidy",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-tidy"
  },
  "keywords": [
    "linter",
    "lint",
    "tidy",
    "tidy-html5"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^4.3.2",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "coffeelint": "^1.14.2",
    "eslint": "^2.2.0",
    "babel-eslint": "^5.0.0",
    "eslint-config-airbnb": "^5.0.0"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        2,
        "never"
      ],
      "no-console": 0
    },
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ]
}
