{
  "name": "linter-tidy",
  "main": "./lib/main.coffee",
  "version": "2.2.0",
  "description": "Linter plugin for HTML, using tidy",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-tidy"
  },
  "keywords": [
    "linter",
    "lint",
    "tidy",
    "tidy-html5"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "test": "apm test",
    "lint": "coffeelint lib && eslint spec"
  },
  "dependencies": {
    "atom-linter": "^7.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "coffeelint": "^1.14.2",
    "eslint": "^3.2.0",
    "eslint-config-airbnb-base": "^5.0.1",
    "eslint-plugin-import": "^1.12.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ]
}
